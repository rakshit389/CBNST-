#include<stdio.h>
#include<conio.h>
#include<math.h>
#define f1(x,y,z)  (5-y-z)/2
#define f2(x,y,z)  (15-3*x-2*z)/5
#define f3(x,y,z)  (8-2*x-y)/4

int main()
{
    float x0 = 0 , y0 = 0 , z0 = 0 , x1 , y1 , z1 , e1 , e2 , e3 , e ;
    printf("Enter the tolerable error :\n");
    scanf("%f",&e);
    
    int step = 1 ;
    printf("step\tx\ty\tz\n");
    do
    {
        x1 = f1(x0,y0,z0);
        y1 = f2(x1,y0,z0);
        z1 = f3(x1,y1,z0) ;
        
        printf("%d\t%0.4f\t%0.4f\t%0.4f\n",step , x1 , y1 , z1);
        
        e1 = fabs( x0-x1 );
        e2 = fabs( y0-y1 );
        e3 = fabs( z0-z1 );
        
        x0 = x1 ;
        y0 = y1 ;
        z0 = z1 ;
        
        step++;
        
    }while( e1 > e && e2 > e && e3 > e );
    
     printf("\nSolution: x=%0.3f, y=%0.3f and z = %0.3f\n",x1,y1,z1);
}
